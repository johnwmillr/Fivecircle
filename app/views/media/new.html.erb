<h1 style="background-color:yellow;">New Media</h1>

<%= form_for(:medium, multipart: true) do |f| %>
 <div align="center">
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image%>
  </div>
  
  <div class="field">
    <%= f.label :caption %>

    <p><%= f.text_area :note, cols: "30", rows: "10" %></p>
  
  <div class="actions">
    <%= f.submit 'Upload image' %>

  </div>
  </br>
 </div>  
<% end %>
